/* pages/intruduce/intruduce.wxss */
.banner{
  width: 100%;
  height:370rpx;
}
.title{
  color:#57aaff;
  font-size: 40rpx;
  line-height: 3;
}
.detail>view{
  padding-left: 70rpx;
  position: relative;
  line-height: 50rpx;
  color:#666;
  font-size: 30rpx;
  margin-bottom: 30rpx;
  }
.detail>view .ico{
  background-color: #57aaff;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  top: 0;
  left: 0;
  text-align: center;
  padding:0
}
.detail>view image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle
}
.detail>view .ico-no{
  background-color: #fff
  }
.detail>view .ico-no image{
  width: 50rpx;
  height: 50rpx;
}
.map{
  padding-bottom: 60rpx;
}
.detail .cs_button-box{
 position: fixed;
  width: 100rpx;
  height:80rpx;
  top: 450rpx;
  right: 50rpx;
  text-align: center;
}
.cs_button{
   width: 60rpx;
  height:60rpx;
  text-align: center;
  padding: 0;
  background-color: #fff;
  border: 0px;
 
}
.cs_button-box view{
 font-size: 24rpx;
 color:#57aaff;
}
.cs_button:after {
  border: 0px;
}
.cs_button-box .cs_button image{
   width:60rpx;
  height: 60rpx;
  vertical-align: top
}